@model IEnumerable<Model.Entities.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

<header class="bg-primary text-white">
    <div class="container text-center">
        <h1>Welcome to Worm shop!</h1>
        <p class="lead">The only store where you will find everything for worms!</p>
    </div>
</header>

<section id="about">
    <div class="container">
        <div class="row">
            <div style="padding-left: 15%; padding-right: 15%;">
                <h2>About this page</h2>
                <p class="lead">This is a great place to talk about your worms. Here you can buy everything which you want
                    to fascinating game with your little insects. We are honored to show you our rich equipment for them.</p>
                <ul>
                    <li>Bazooka</li>
                    <li>Granadies</li>
                    <li>Bombs</li>
                    <li>Machine guns</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<section id="services" class="bg-light" style="background-color: #f0f0f0;">
    <div class="container">
        <div class="row">
            <div style="padding-left: 15%; padding-right: 15%;">
                <h2>Services we offer</h2>
                <p class="lead">If you like worms battles with good weapons you can stock up on many types of them in the place which you have chosen perfectly.</p>
            </div>
        </div>
    </div>
</section>

<section id="contact bg-dark">
    <div class="container">
        <div class="row">
            <div style="padding-left: 15%; padding-right: 15%;">
                <h2>Contact us</h2>
                <p class="lead">After 3-4 days from sending your order, you will receive an ID of your shipment and a link to track it. If after 4 working days you have not received the tracking number, please contact us at wormStore@gmail.com</p>
            </div>
        </div>
    </div>
</section>


@{
    foreach (var item in Model)
    {
        <div class="main-content">
            <div class="content-image">
                <a href="#"><img src="@Url.Content(item.PhotoPath)" width="150" height="150" /></a>
            </div>
            <div class="content-title">
                <a href="#">@item.Name</a>
            </div>
            <div class="content-title">
                <a href="#">@item.Price</a>
            </div>
            <div class="content-title">
                @Html.ActionLink("Add to cart", "OrderNow", "ShoppingCart", new { id = item.Id }, null)
            </div>
        </div>
    }
}